			"minecraft:breakonpush": false,
			"minecraft:on_player_destroyed": {
				"target": "self",
				"event": "on_break",
				"condition": "query.equipped_item_any_tag('slot.weapon.mainhand', 'minecraft:is_shovel') || query.get_equipped_item_name == 'wooden_shovel' || query.get_equipped_item_name == 'stone_shovel' || query.get_equipped_item_name == 'golden_shovel' || query.get_equipped_item_name == 'iron_shovel' || query.get_equipped_item_name == 'diamond_shovel' || query.get_equipped_item_name == 'netherite_shovel'"
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "aridstone",
					"render_method": "opaque"
				}
			},
			"tag:stone": {}
		},
		"events": {
			"on_break": {
				"sequence": [
					{
						"spawn_loot": {
							"table": "loot_tables/blocks/aridstone.json"
						}
					}
				]
			}
